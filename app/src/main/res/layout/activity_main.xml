<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Plain Full-Width Top Bar -->
        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:visibility="gone"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/customerInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/balanceArea"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/txtCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Müşteri Adı"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/txtSalespersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satış Temsilcisi: ---"
                    android:textSize="11sp"
                    android:textColor="#757575"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/balanceArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <!-- Ödeme Yap Butonu -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginEnd="8dp"
                    android:text="Ödeme Yap"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingHorizontal="8dp"
                    app:cornerRadius="19dp"
                    app:icon="@drawable/ic_wallet"
                    app:iconSize="16dp"
                    app:backgroundTint="#43A047"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/pill_background"
                    android:backgroundTint="#F5F5F5"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <TextView
                        android:id="@+id/txtTopBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0,00 TL (A)"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <ImageButton
                        android:id="@+id/btnRefreshBalance"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_rotate"
                        app:tint="#1976D2"
                        android:padding="2dp"
                        android:scaleType="centerInside" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topBar"
            android:layout_above="@+id/bottomNavContainer">

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!-- YENIDEN TASARLANMIŞ ALT MENÜ -->
        <RelativeLayout
            android:id="@+id/bottomNavContainer"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:background="@android:color/transparent">

            <!-- Alt Bar Kartı -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:gravity="center_vertical">

                    <!-- Ana Sayfa -->
                    <LinearLayout
                        android:id="@+id/btnNavHome"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless">
                        <ImageView
                            android:id="@+id/imgNavHome"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_home"
                            app:tint="#1976D2" />
                        <TextView
                            android:id="@+id/txtNavHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Ana Sayfa"
                            android:textSize="11sp"
                            android:textColor="#1976D2"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- İbico -->
                    <LinearLayout
                        android:id="@+id/btnNavIbico"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless">
                        <ImageView
                            android:id="@+id/imgNavIbico"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ibico"
                            android:scaleType="centerInside" />
                        <TextView
                            android:id="@+id/txtNavIbico"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="İbico"
                            android:textSize="11sp"
                            android:textColor="#424242" />
                    </LinearLayout>

                    <!-- Ortadaki Boşluk (Barkod için) -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <!-- Listeler -->
                    <LinearLayout
                        android:id="@+id/btnNavLists"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless">
                        <ImageView
                            android:id="@+id/imgNavLists"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_lists"
                            app:tint="#9E9E9E" />
                        <TextView
                            android:id="@+id/txtNavLists"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Listeler"
                            android:textSize="11sp"
                            android:textColor="#9E9E9E" />
                    </LinearLayout>

                    <!-- Sepet -->
                    <LinearLayout
                        android:id="@+id/btnNavCart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:background="?attr/selectableItemBackgroundBorderless">
                        
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clipChildren="false"
                            android:clipToPadding="false">
                            
                            <ImageView
                                android:id="@+id/imgNavCart"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_cart"
                                app:tint="#424242" />

                            <TextView
                                android:id="@+id/txtCartBadge"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="top|end"
                                android:layout_marginTop="-6dp"
                                android:layout_marginEnd="-6dp"
                                android:background="@drawable/pill_background"
                                android:backgroundTint="#F44336"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/txtNavCartTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="0.00 ₺"
                            android:textSize="11sp"
                            android:textColor="#424242"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

        <!-- Premium Barkod Butonu (Alt Menünün ÜSTÜNDE) -->
        <FrameLayout
            android:id="@+id/btnNavBarcode"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:clickable="true"
            android:focusable="true">

            <!-- Dış Halka (Gölge Efekti) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="44dp"
                app:cardElevation="24dp"
                app:strokeWidth="0dp">

                <!-- İç Daire (Ana Buton) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#1565C0"
                    app:cardCornerRadius="38dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <!-- İkon -->
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_barcode"
                        app:tint="#FFFFFF" />

                </com.google.android.material.card.MaterialCardView>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>


        <!-- Mini Barkod Tarayıcı Penceresi -->
        <FrameLayout
            android:id="@+id/scannerContainer"
            android:layout_width="320dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:elevation="50dp"
            android:background="@drawable/scanner_background">

            <com.journeyapps.barcodescanner.DecoratedBarcodeView
                android:id="@+id/barcodeScanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:zxing_scanner_layout="@layout/custom_scanner" />

            <!-- Kapatma Butonu -->
            <ImageButton
                android:id="@+id/btnCloseScanner"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:background="@drawable/close_button_bg"
                android:src="@drawable/ic_close"
                android:contentDescription="Kapat"
                android:scaleType="centerInside"
                android:padding="8dp" />

        </FrameLayout>

    </RelativeLayout>

    <!-- Modern Splash Overlay (Site yüklenene kadar görünür) -->
    <FrameLayout
        android:id="@+id/splashOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/splashLogo"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ico"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="KARTAL İSTOÇ"
                android:textSize="22sp"
                android:letterSpacing="0.1"
                android:textStyle="bold"
                android:textColor="#333333" />

            <ProgressBar
                android:layout_width="120dp"
                android:layout_height="3dp"
                android:layout_marginTop="30dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorPrimary" />

        </LinearLayout>
    </FrameLayout>

    <!-- Modern BottomSheet Panel (Lists/Invoices) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/invoicesPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:cardElevation="24dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:orientation="vertical"
            android:background="@drawable/sheet_background">

            <View
                android:id="@+id/dragHandle"
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="#D1D1D1"
                android:alpha="0.6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingTop="20dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/txtPanelTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Listelerim"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/gray_900"
                    android:layout_centerVertical="true" />

                <ImageButton
                    android:id="@+id/btnCloseInvoices"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/pill_background"
                    android:src="@drawable/ic_close"
                    android:padding="12dp"
                    app:tint="#424242" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:overScrollMode="never">

                    <LinearLayout
                        android:id="@+id/invoicesListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="24dp"
                        android:paddingHorizontal="4dp" />
                </androidx.core.widget.NestedScrollView>

                <ProgressBar
                    android:id="@+id/invoicesLoading"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/txtInvoicesErrorArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_lists"
                        app:tint="#BDBDBD"
                        android:layout_marginBottom="12dp" />
                    <TextView
                        android:id="@+id/txtInvoicesError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gösterilecek veri bulunamadı."
                        android:textColor="#9E9E9E"
                        android:textSize="15sp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- İbico Products Panel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ibicoPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"
        app:cardElevation="24dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:orientation="vertical"
            android:background="@drawable/sheet_background">

            <View
                android:layout_width="32dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="#D1D1D1"
                android:alpha="0.6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingTop="20dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İbico Ürünleri"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/gray_900"
                    android:layout_centerVertical="true" />

                <ImageButton
                    android:id="@+id/btnCloseIbico"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/pill_background"
                    android:src="@drawable/ic_close"
                    android:padding="12dp"
                    app:tint="#424242" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ibicoProductGrid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="8dp"
                    android:clipToPadding="false"
                    android:scrollbarStyle="outsideOverlay" />

                <ProgressBar
                    android:id="@+id/ibicoLoading"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="@color/colorPrimary" />

            </FrameLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
