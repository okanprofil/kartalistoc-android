<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.KartalIstoc" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSuccess</item>
        <item name="colorSecondaryVariant">@color/colorSuccess</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Components -->
        <item name="android:windowBackground">@color/white</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.UnelevatedButton</item>
    </style>

    <style name="BottomNavActiveTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#1976D2</item>
    </style>

    <style name="BottomNavInactiveTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#424242</item>
    </style>
</resources>
